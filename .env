# DhinSpeak System Environment Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration
ALLOWED_ORIGINS=["*", "https://websocketking.com", "http://websocketking.com"]

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=firebase_credentials.json
FIREBASE_DATABASE_URL=https://smarttranslation-aacf9-default-rtdb.asia-southeast1.firebasedatabase.app/

# Translation Configuration
TRANSLATION_CACHE_SIZE=1000
MAX_TEXT_LENGTH=500
TRANSLATION_TIMEOUT=5.0

# Model Configuration
ID_EN_MODEL_NAME=dhintech/marian-tedtalks-id-en
EN_ID_MODEL_NAME=Helsinki-NLP/opus-mt-en-id

# Dictionary Configuration
DICTIONARY_ID_PATH=dictionary_id.txt
DICTIONARY_EN_PATH=dictionary_en.txt

# Performance Configuration
MAX_EDIT_DISTANCE=2
PREFIX_LENGTH=7
MIN_WORD_FREQUENCY=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
MAX_CONNECTIONS_PER_ROOM=50

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
METRICS_LOG_FILE=logs/nlp_metrics.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
